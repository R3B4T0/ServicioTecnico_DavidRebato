{% extends 'base.html.twig' %}

{% block title %}Registro{% endblock %}
{% block stylesheets %}
<link href="{{ asset('css/estiloRegistrar.css') }}" type="text/css" rel="stylesheet">
<link href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
{% endblock %}

{% block javascripts %}
<script src="//netdna.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
{% endblock %}

{% block body %}
<form>
	<div class="container">
	<!---heading-->
		<header class="heading"> Registro</header><hr></hr>
		<!---Form starting--> 
		<div class="row ">
		<!--- For Name-->
			<div class="col-sm-12">
				<div class="row">
					<div class="col-xs-4">
						<label class="nom">Nombre :</label> </div>
					<div class="col-xs-8">
						<input type="text" name="form[nombre]" id="nombre" placeholder="Nombre..." class="form-control ">
				</div>
				</div>
			</div>
			
			
			<div class="col-sm-12">
				<div class="row">
					<div class="col-xs-4">
						<label class="apell">Apellidos :</label></div>
					<div class ="col-xs-8">	 
						<input type="text" name="form[apellidos]" id="apellidos" placeholder="Apellidos" class="form-control last">
					</div>
				</div>
			</div>
		<!---For email-->
			<div class="col-sm-12">
				<div class="row">
					<div class="col-xs-4">
						<label class="mail" >Correo :</label></div>
					<div class="col-xs-8"	>	 
						<input type="email" name="form[email]"  id="email"placeholder="Enter your email" class="form-control" >
					</div>
				</div>
			</div>
		<!---For Password and confirm password-->
			<div class="col-sm-12">
					<div class="row">
						<div class="col-xs-4">
							<label class="pass">Contraseña :</label></div>
					<div class="col-xs-8">
							<input type="password" name="form[contraseña]" id="contraseña" placeholder="Enter your Password" class="form-control">
					</div>
			</div>
			</div>
			
		<!---For Phone number-->
			<div class="col-sm-12">
				<div class="row">
					<div class="col-xs-4">
						<label class="telefono" >Telefono :</label></div>
					<div class="col-xs-8"	>	 
						<input type="number" name="form[telefono]"  id="telefono" placeholder="Telefono..." class="form-control" >
					</div>
				</div>
			</div>
				<div class="col-sm-12">
					<div class="btn btn-warning">Submit</div>
			</div>
			</div>
		</div>	 
					
			
	</div>
</form>
{% endblock %}
