{% extends 'base.html.twig' %}

{% block body %}
{{ parent() }}
    <div class="card" style="color:white; height:auto;">
        <div class="card-body">
            <h4 class="card-title">Nombre</h4>
            <p class="card-text">{{cliente.nombre}}</p>
            <h4 class="card-title">Apellidos</h4>
            <p class="card-text">{{cliente.apellidos}}</p>
            <h4 class="card-title">Teléfono</h4>
            <p class="card-text">{{cliente.telefono}}</p>
            <h4 class="card-title">Dirección</h4>
            <p class="card-text">{{cliente.direccion}}</p>
            <a href="/cliente" class="btn btn-primary btn-block" role="button">Volver</a>
        </div>
    </div>
    <h2 style="color:white;">Incidencias</h2>
    <div class="card" style="height: auto;">
        <div class="card-body">
            {% for incidencia in cliente.incidencias %}
            <h4 class="card-title"><a href="{{ path('ver_incidencia', {id:incidencia.id}) }}">{{incidencia.titulo}}</a></h4>
            <p class="card-text"><a href="{{ path('borrar_incidencia', {id:incidencia.id}) }}" class="btn btn-danger">Borrar Incidencia</a></p>
            {% else %}
                <p style="color:white;">No hay incidencias aún.</p>
            {% endfor %}
        </div>
    </div>
    <a href="{{ path('insertar_incidencia_cliente', {id:cliente.id}) }}" class="btn btn-primary">Insertar incidencia</a>
{% endblock %}